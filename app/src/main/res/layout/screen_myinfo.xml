<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.soen.connectup4.MyInfoPage"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    <android.support.v7.widget.Toolbar
        android:id="@+id/myinfo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/MyToolbar"
        />
    <View
        android:id="@+id/myinfoToolbarLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/myinfo_toolbar"
        android:background="@color/colorPrimaryDark"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/rounded_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_profile"
            android:tint="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/profile_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_pic"
            android:layout_alignTop="@+id/profile_pic"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/profile_nameAge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_id"
            android:layout_alignStart="@+id/profile_id"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/profile_birthday"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_nameAge"
            android:layout_alignStart="@+id/profile_nameAge"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/profile_uniMajor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_birthday"
            android:layout_alignStart="@+id/profile_birthday"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />



    </RelativeLayout>
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="로그아웃"
        android:onClick="mOnClick"
        />

</LinearLayout>