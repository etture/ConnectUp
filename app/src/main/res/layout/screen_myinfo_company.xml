<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.soen.connectup4.CompanyMyInfoPage"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/company_myinfo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/MyToolbar"
            />
        <View
            android:id="@+id/companyMyinfoToolbarLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/company_myinfo_toolbar"
            android:background="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/rounded_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/company_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_company"
            android:tint="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/company_profile_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/company_profile_pic"
            android:layout_alignTop="@+id/company_profile_pic"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/company_profile_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_id"
            android:layout_alignStart="@+id/company_profile_id"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/company_profile_employee"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_name"
            android:layout_alignStart="@+id/company_profile_name"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/company_profile_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_employee"
            android:layout_alignStart="@+id/company_profile_employee"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/company_profile_website"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_number"
            android:layout_alignStart="@+id/company_profile_number"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/company_profile_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_website"
            android:layout_alignStart="@+id/company_profile_website"
            android:textColor="@color/gray"
            android:textSize="11sp"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/companyLogoutBtn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_margin="20dp"
        android:text="로그아웃"
        android:onClick="mOnClick"
        />

</LinearLayout>