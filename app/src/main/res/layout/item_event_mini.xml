<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <RelativeLayout
                android:id="@+id/item_event_mini_box1"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:layout_marginLeft="7dp"
                android:background="@color/white"
                android:foreground="?attr/selectableItemBackground"
                >
                <ImageView
                    android:id="@+id/item_event_mini_img1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/icon_songaree"
                    android:scaleType="fitXY"
                    android:background="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/item_event_mini_img1"
                    android:background="@color/lightGray"
                    />
                <TextView
                    android:id="@+id/item_event_mini_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_event_mini_img1"
                    android:text="samplesample"
                    android:textSize="12sp"
                    android:textColor="@color/darkGray"
                    />
                <TextView
                    android:id="@+id/item_event_mini_subtext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_event_mini_text1"
                    android:layout_marginTop="5dp"
                    android:text="samplesample"
                    android:textSize="10sp"
                    android:textColor="@color/blue"
                    />
