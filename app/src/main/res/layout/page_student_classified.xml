<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/page_student_classified_logoframe"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:layout_centerVertical="true"
            android:background="@color/lightGray"
            >
            <ImageView
                android:id="@+id/page_student_classified_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                />
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_student_classified_logoframe"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/page_student_classified_introduction_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/page_student_classified_introduction_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="기업 소개"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="14dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/page_student_classified_introduction_title"
                    android:layout_alignStart="@+id/page_student_classified_introduction_title"
                    android:layout_marginRight="20dp"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg"
                    >
                    <TextView
                        android:id="@+id/page_student_classified_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_student_classified_hiring_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page_student_classified_introduction_frame"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/page_student_classified_hiring_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="진행 중인 채용 정보"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="14dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/page_student_classified_hiring_title"
                    android:layout_alignStart="@+id/page_student_classified_hiring_title"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg"
                    >
                    <TextView
                        android:id="@+id/page_student_classified_hiring_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_hiring_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_hiring_name"
                        android:layout_alignStart="@+id/page_student_classified_hiring_name"
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_hiring_salary_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_hiring_job"
                        android:layout_alignStart="@+id/page_student_classified_hiring_job"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_hiring_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_hiring_salary_experience"
                        android:layout_alignStart="@+id/page_student_classified_hiring_salary_experience"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_student_classified_welfare_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page_student_classified_hiring_frame"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/page_student_classified_welfare_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="복지 혜택"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="14dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/page_student_classified_welfare_title"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg"
                    >
                    <TextView
                        android:id="@+id/page_student_classified_welfare_insurance_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="보험, 의료:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_welfare_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/page_student_classified_welfare_insurance_title"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />

                    <TextView
                        android:id="@+id/page_student_classified_welfare_workhour_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/page_student_classified_welfare_workhour"
                        android:layout_alignBottom="@+id/page_student_classified_welfare_workhour"
                        android:layout_alignParentStart="true"
                        android:text="근무 형태:"
                        android:textColor="@color/darkGray"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/page_student_classified_welfare_workhour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_welfare_insurance"
                        android:layout_toRightOf="@+id/page_student_classified_welfare_workhour_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_welfare_vacation_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_welfare_workhour"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="연차, 휴가:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_welfare_vacation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_welfare_workhour"
                        android:layout_toRightOf="@+id/page_student_classified_welfare_vacation_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />

                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_student_classified_information_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page_student_classified_welfare_frame"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/page_student_classified_information_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="기업 정보"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="14dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/page_student_classified_information_title"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg"
                    >
                    <TextView
                        android:id="@+id/page_student_classified_information_founding_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="설립일:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_founding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/page_student_classified_information_founding_title"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_size_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_founding"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="구성원:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_founding"
                        android:layout_toRightOf="@+id/page_student_classified_information_size_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_website_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_size"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="홈페이지:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_size"
                        android:layout_toRightOf="@+id/page_student_classified_information_website_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_email_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_website"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="이메일:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_website"
                        android:layout_toRightOf="@+id/page_student_classified_information_email_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_phone_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_email"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="전화번호:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_email"
                        android:layout_toRightOf="@+id/page_student_classified_information_phone_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_address_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_phone"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        android:text="사무실:"
                        />
                    <TextView
                        android:id="@+id/page_student_classified_information_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_student_classified_information_phone"
                        android:layout_toRightOf="@+id/page_student_classified_information_address_title"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkGray"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_student_classified_applybtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/page_student_classified_information_frame"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="지원하기"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>





        </RelativeLayout>
    </ScrollView>

</RelativeLayout>